{
  "name": "Inspyr Call Summary Email",
  "emailTemplatePlaybook": {
    "subject": "Invoice {{#invoiceData_list}}#{{invoiceNumber}} {{/invoiceData_list}}Client: {{contactCompanyName}}, Call Summary",
    "body": "<!DOCTYPE html>\r\n<html>\r\n<head>\r\n<meta charset=\"UTF-8\" />\r\n<meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\" />\r\n<title>Call Summary</title>\r\n</head>\r\n<body style=\"font-family: Arial, Helvetica, sans-serif; line-height: 1.6; color: #1f2937; max-width: 800px; margin: 0 auto; padding: 40px 20px; background-color: #F8FBFF;\">\r\n\r\n<!-- Header -->\r\n<div style=\"margin-bottom: 12px; background: white; border-color:{{primaryColor}}; border-bottom: 3px solid {{primaryColor}}; border-radius: 8px; text-align: center; font-family: Arial, Helvetica, sans-serif;\">\r\n<table width=\"100%\" cellpadding=\"0\" cellspacing=\"0\" border=\"0\">\r\n<tr>\r\n<td>\r\n<div style=\"margin: 15px 20px 0 0;\">\r\n<img src=\"https://raw.githubusercontent.com/AliGetBrain/Logo-Storage/main/IS_logo-full_RGB_250x80.png\" width=\"250\" height=\"80\" alt=\"Logo\">\r\n</div>\r\n</td>\r\n</tr>\r\n<tr>\r\n<td>\r\n<h2 style=\"margin: 0 0 5px 0; font-weight: 600; letter-spacing: 0.025em;\"><span style=\"color: {{primaryColor}};\">CALL SUMMARY</span></h2>\r\n<p style=\"font-weight: 600; margin: 0 0 15px 0; font-size: 1rem;\">{{contactCompanyName}} - {{callDate}}</p>\r\n</td>\r\n</tr>\r\n</table>\r\n</div>\r\n\r\n<div style=\"background: white; border-radius: 12px; padding: 40px; position: relative; overflow: hidden;\">\r\n<table cellpadding=\"0\" cellspacing=\"0\" border=\"0\" width=\"100%\" style=\"max-width: 600px; margin: 0 auto\">\r\n\r\n<!-- Client Info Card -->\r\n<tr>\r\n<td style=\"padding: 15px 20px 0 20px\">\r\n<table cellpadding=\"0\" cellspacing=\"0\" border=\"0\" width=\"100%\" style=\"background-color: #F8FBFF; border-radius: 6px;\">\r\n<tr>\r\n<td style=\"padding: 20px\">\r\n<h2 style=\"color: {{primaryColor}}; margin: 0 0 15px 0; font-size: 18px; border-bottom: 1px solid #eeeeee; padding-bottom: 10px;\">Client Details</h2>\r\n<table cellpadding=\"0\" cellspacing=\"0\" border=\"0\" width=\"100%\">\r\n<tr>\r\n<td width=\"50%\" style=\"vertical-align: top; padding-right: 10px\">\r\n<p style=\"margin: 0 0 5px 0;\"><strong>Client:</strong></p>\r\n<p style=\"margin: 0 0 10px 0; color: #333333\">{{contactCompanyName}}</p>\r\n<p style=\"margin: 0 0 5px 0;\"><strong>Client Email:</strong></p>\r\n<p style=\"margin: 0 0 10px 0; color: #333333\">{{contactEmail}}</p>\r\n</td>\r\n<td width=\"50%\" style=\"vertical-align: top; padding-left: 10px\">\r\n<p style=\"margin: 0 0 5px 0;\"><strong>Customer #</strong></p>\r\n<p style=\"margin: 0 0 10px 0; color: #333333\">{{customerNumber}}</p>\r\n<p style=\"margin: 0 0 5px 0;\"><strong>Call Date:</strong></p>\r\n<p style=\"margin: 0 0 10px 0; color: #333333\">{{ callDate}}</p>\r\n</td>\r\n</tr>\r\n</table>\r\n</td>\r\n</tr>\r\n</table>\r\n</td>\r\n</tr>\r\n\r\n<!-- Invoices Card -->\r\n<tr>\r\n<td style=\"padding: 15px 20px 0 20px\">\r\n<table cellpadding=\"0\" cellspacing=\"0\" border=\"0\" width=\"100%\" style=\"background-color: #F8FBFF; border-radius: 6px;\">\r\n<tr>\r\n<td style=\"padding: 20px\">\r\n<h2 style=\"color:{{primaryColor}}; margin: 0 0 15px 0; font-size: 18px; border-bottom: 1px solid #eeeeee; padding-bottom: 10px;\">Invoices Discussed</h2>\r\n\r\n{{#invoiceData_list}}\r\n<!-- Invoice Items -->\r\n{{#has_willPay}}\r\n<table cellpadding=\"0\" cellspacing=\"0\" border=\"0\" width=\"100%\" style=\"margin-bottom: 10px; background-color: #F8FBFF; border-left: 4px solid #4caf50; border-radius: 3px;\">\r\n<tr style=\"background-color: white; border-radius: 8px;\">\r\n<td style=\"padding: 20px\">\r\n<p style=\"margin: 0; font-weight: bold; font-size: 16px\">Invoice #{{invoiceNumber}}</p>\r\n</td>\r\n<td width=\"55%\">\r\n<p style=\"margin: 0 0 0 0; color: #4b5563\">Status: <span style=\"color: #4caf50; font-weight: bold\">Scheduled for {{ promiseDate}}</span></p>\r\n</td>\r\n</tr>\r\n</table>\r\n{{/has_willPay}}\r\n{{#has_wasPaid}}\r\n<table cellpadding=\"0\" cellspacing=\"0\" border=\"0\" width=\"100%\" style=\"margin-bottom: 10px; background-color: #F8FBFF; border-left: 4px solid #ff9800; border-radius: 3px;\">\r\n<tr style=\"background-color: white; border-radius: 8px;\">\r\n<td style=\"padding: 20px\">\r\n<p style=\"margin: 0; font-weight: bold; font-size: 16px\">Invoice #{{invoiceNumber}}</p>\r\n</td>\r\n<td width=\"55%\">\r\n<p style=\"margin: 0 0 0 0; color: #666666\">Status: <span style=\"color: #ff9800; font-weight: bold\">Payment Research Required</span></p>\r\n</td>\r\n</tr>\r\n</table>\r\n{{/has_wasPaid}}\r\n{{#has_shouldEscalate}}\r\n<table cellpadding=\"0\" cellspacing=\"0\" border=\"0\" width=\"100%\" style=\"margin-bottom: 10px; background-color: #F8FBFF; border-left: 4px solid #f44336; border-radius: 3px;\">\r\n<tr style=\"background-color: white; border-radius: 8px;\">\r\n<td style=\"padding: 20px\">\r\n<p style=\"margin: 0; font-weight: bold; font-size: 16px\">Invoice #{{invoiceNumber}}</p>\r\n</td>\r\n<td width=\"55%\">\r\n<p style=\"margin: 0 0 0 0; color: #666666\">Status: <span style=\"color: #f44336; font-weight: bold\">Escalation Required</span></p>\r\n</td>\r\n</tr>\r\n</table>\r\n{{/has_shouldEscalate}}\r\n{{/invoiceData_list}}\r\n\r\n</td>\r\n</tr>\r\n</table>\r\n</td>\r\n</tr>\r\n\r\n<!-- Call Summary Card -->\r\n<tr>\r\n<td style=\"padding: 15px 20px 0 20px\">\r\n<table cellpadding=\"0\" cellspacing=\"0\" border=\"0\" width=\"100%\" style=\"background-color: #F8FBFF; border-radius: 6px;\">\r\n<tr>\r\n<td style=\"padding: 20px\">\r\n<h2 style=\"color: {{primaryColor}}; margin: 0 0 15px 0; font-size: 18px; border-bottom: 1px solid #eeeeee; padding-bottom: 10px;\">Call Summary</h2>\r\n<p style=\"margin: 0; line-height: 1.5; color: #333333\">{{callSummary}}</p>\r\n</td>\r\n</tr>\r\n</table>\r\n</td>\r\n</tr>\r\n\r\n{{#has_escalationNotes}}\r\n<!-- Escalations Card -->\r\n<tr>\r\n<td style=\"padding: 15px 20px 0 20px\">\r\n<table cellpadding=\"0\" cellspacing=\"0\" border=\"0\" width=\"100%\" style=\"background-color: #fff8e1; border-radius: 6px; border-left: 4px solid #ff9800;\">\r\n<tr>\r\n<td style=\"padding: 20px\">\r\n<h2 style=\"color: #ff9800; margin: 0 0 0 0; font-size: 18px; border-bottom: 1px solid #ffe0b2;\">Escalations</h2>\r\n</td>\r\n</tr>\r\n{{#invoiceData_list}}\r\n{{#has_shouldEscalate}}\r\n<tr>\r\n<td style=\"padding: 0 20px 15px 20px\">\r\n<p style=\"margin: 0; line-height: 1.5; color: #333333\"><strong>Invoice #{{invoiceNumber}}:</strong> {{escalationNotes}}</p>\r\n</td>\r\n</tr>\r\n{{/has_shouldEscalate}}\r\n{{/invoiceData_list}}\r\n</table>\r\n</td>\r\n</tr>\r\n{{/has_escalationNotes}}\r\n\r\n<!-- Client Related Updates -->\r\n{{#has_clientUpdates}}\r\n<tr>\r\n<td style=\"padding: 15px 20px 0 20px\">\r\n<table cellpadding=\"0\" cellspacing=\"0\" border=\"0\" width=\"100%\" style=\"background-color: #fff8e1; border-radius: 6px; border-left: 4px solid #ff9800;\">\r\n<tr>\r\n<td style=\"padding: 20px\">\r\n<h2 style=\"color: #ff9800; margin: 0 0 0 0; font-size: 18px; border-bottom: 1px solid #ffe0b2;\">Client Updates</h2>\r\n</td>\r\n</tr>\r\n<tr>\r\n<td style=\"padding: 0 20px 15px 20px\">\r\n<p style=\"margin: 0; line-height: 1.5; color: #333333\">{{clientUpdates}}</p>\r\n</td>\r\n</tr>\r\n</table>\r\n</td>\r\n</tr>\r\n{{/has_clientUpdates}}\r\n\r\n<!-- Recording Link Card -->\r\n<tr>\r\n<td style=\"padding: 15px 20px 0 20px\">\r\n<table cellpadding=\"0\" cellspacing=\"0\" border=\"0\" width=\"100%\" style=\"background-color: #F8FBFF; border-radius: 6px; margin-bottom: 20px;\">\r\n<tr>\r\n{{#has_callRecordingLink}}\r\n<td style=\"padding: 20px; text-align: center\">\r\n<h2 style=\"color: {{primaryColor}}; margin: 0 0 15px 0; font-size: 18px; border-bottom: 1px solid #eeeeee; padding-bottom: 10px;\">Call Recording</h2>\r\n<a href=\"{{callRecordingLink}}\" target=\"_blank\" style=\"display: inline-block; background-color: {{primaryColor}}; color: #ffffff; text-decoration: none; padding: 10px 20px; border-radius: 4px; font-weight: bold;\">Listen to Full Recording</a>\r\n</td>\r\n{{/has_callRecordingLink}}\r\n</tr>\r\n</table>\r\n</td>\r\n</tr>\r\n\r\n</table>\r\n</div>\r\n</body>\r\n</html>",
    "alt": ""
  }
}
